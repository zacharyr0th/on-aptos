{
  "name": "on-aptos",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --port 3001",
    "build": "next build",
    "postbuild": "next-sitemap",
    "start": "next start --port 3001",
    "lint": "biome check --write",
    "lint:fix": "biome check --write --unsafe",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "format": "biome format --write",
    "format:check": "biome check",
    "clean": "rm -rf node_modules .next .turbo dist build tmp .cache package-lock.json yarn.lock pnpm-lock.yaml && bun install",
    "sitemap": "next-sitemap",
    "translate-locales": "node scripts/translate-locales.js",
    "analyze:translations": "node scripts/analyze-translations.js",
    "validate:translations": "tsx scripts/validate-translations.ts",
    "fix:translations": "tsx scripts/fix-missing-translations.ts",
    "analyze": "ANALYZE=true bun run build",
    "analyze:server": "BUNDLE_ANALYZE=server bun run build",
    "analyze:browser": "BUNDLE_ANALYZE=browser bun run build",
    "kill": "lsof -ti :3001 | xargs kill -9",
    "web": "lsof -ti:3001 | xargs kill -9 2>/dev/null || echo 'No processes on port 3001' && sleep 1 && bun run dev",
    "commitlint": "commitlint --edit",
    "security:scan": "gitleaks detect --source . --config .gitleaks.toml",
    "security:baseline": "detect-secrets scan --baseline .secrets.baseline --update",
    "security:audit": "detect-secrets audit .secrets.baseline",
    "hooks:install": "pre-commit install && pre-commit install --hook-type commit-msg",
    "hooks:update": "pre-commit autoupdate",
    "hooks:run": "pre-commit run --all-files",
    "validate:env": "node .env.validation.js",
    "check:security": "bun audit && bun run security:scan",
    "check:circular-deps": "node scripts/check-circular-deps.js",
    "prepare:release": "bun run lint && bun run test && bun run validate:env && bun run check:circular-deps",
    "optimize:images": "node scripts/optimize-readme-images.js"
  },
  "dependencies": {
    "@aptos-labs/ts-sdk": "^4.0.0",
    "@aptos-labs/wallet-adapter-react": "^7.0.4",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-aspect-ratio": "^1.1.7",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-hover-card": "^1.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-navigation-menu": "^1.2.14",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toggle": "^1.1.10",
    "@radix-ui/react-toggle-group": "^1.1.11",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tanstack/react-query": "^5.87.1",
    "@tanstack/react-table": "^8.21.3",
    "@tanstack/react-virtual": "^3.13.12",
    "@types/d3": "^7.4.3",
    "@types/react-window": "^1.8.8",
    "@vercel/analytics": "^1.5.0",
    "@vercel/postgres": "^0.10.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "d3": "^7.9.0",
    "dotenv": "^17.2.2",
    "embla-carousel-autoplay": "^8.6.0",
    "embla-carousel-react": "^8.6.0",
    "es-abstract": "^1.24.0",
    "form-data": "^4.0.4",
    "framer-motion": "^12.23.12",
    "geist": "^1.5.1",
    "i18next": "^23.16.8",
    "i18next-http-backend": "^3.0.2",
    "input-otp": "^1.4.2",
    "json-buffer": "^3.0.1",
    "lru-cache": "^11.2.1",
    "lucide-react": "^0.541.0",
    "next": "15.5.0",
    "next-sitemap": "^4.2.3",
    "next-themes": "^0.4.6",
    "pino": "^9.9.4",
    "pino-pretty": "^13.1.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
