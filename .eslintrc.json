{
  "extends": ["next/core-web-vitals", "next/typescript", "prettier"],
  "rules": {
    // TypeScript specific rules (temporarily relaxed for deployment)
    "@typescript-eslint/no-unused-vars": [
      "warn",
      { "argsIgnorePattern": "^_" }
    ],
    "@typescript-eslint/no-explicit-any": "warn",

    // React/Next.js rules
    "react/no-unescaped-entities": "off",
    "react/display-name": "off",
    "react-hooks/exhaustive-deps": "warn",
    "@next/next/no-img-element": "warn",

    // General JavaScript rules (temporarily relaxed)
    "no-console": "warn",
    "no-debugger": "error",
    "prefer-const": "warn",
    "no-var": "error",

    // Import rules (temporarily relaxed)
    "import/order": "warn",

    // Security rules
    "react/jsx-no-target-blank": "error",

    // Performance rules
    "react/jsx-key": "error"
  },
  "settings": {
    "import/resolver": {
      "typescript": {}
    }
  },
  "overrides": [
    {
      "files": [
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/*.spec.ts",
        "**/*.spec.tsx"
      ],
      "env": {
        "jest": true
      },
      "rules": {
        "@typescript-eslint/no-explicit-any": "off",
        "no-console": "off"
      }
    },
    {
      "files": ["scripts/**/*.ts", "scripts/**/*.js"],
      "rules": {
        "no-console": "warn"
      }
    }
  ]
}
